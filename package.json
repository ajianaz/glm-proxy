{
  "name": "glm-proxy",
  "version": "1.0.0",
  "author": "ajianaz",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "prepare": "husky",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vitest run",
    "test:watch": "vitest",
    "security-scan": "./scripts/security-scan.sh",
    "migrate": "bun scripts/migrate.ts",
    "migrate:dry-run": "bun scripts/migrate.ts --dry-run",
    "migrate:force": "bun scripts/migrate.ts --force",
    "backup": "bun scripts/backup.ts",
    "backup:list": "bun scripts/backup.ts --list",
    "backup:compress": "bun scripts/backup.ts --compress",
    "restore": "bun scripts/restore.ts"
  },
  "private": true,
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitest/coverage-v8": "^4.0.17",
    "better-sqlite3": "^12.6.2",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "vitest": "^4.0.17"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.4",
    "postgres": "^3.4.8"
  }
}
