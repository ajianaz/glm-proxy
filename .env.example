ZAI_API_KEY=your_zai_api_key_here
DEFAULT_MODEL=glm-4.7
PORT=3000

# Database Configuration (choose one)
# PostgreSQL: Set DATABASE_URL for production deployments
# DATABASE_URL=postgres://user:password@localhost:5432/glm_proxy

# SQLite: Set DATABASE_PATH for development/simple deployments (default: ./data/sqlite.db)
# DATABASE_PATH=./data/sqlite.db

# Database Connection Retry Configuration
# Maximum number of retry attempts for failed database connections (default: 3)
# DB_RETRY_MAX=3

# Initial delay before first retry in milliseconds (default: 1000)
# DB_RETRY_DELAY_MS=1000

# Backoff multiplier for exponential backoff (default: 2)
# Delay progression: 1000ms, 2000ms, 4000ms, 8000ms...
# DB_RETRY_BACKOFF=2

# Maximum delay between retries in milliseconds (default: 10000)
# DB_RETRY_MAX_DELAY_MS=10000

# Silent mode - suppress retry log messages (default: false)
# DB_RETRY_SILENT=false

# Storage Fallback Configuration
# Enable automatic fallback to file storage on database failure (default: true)
# When enabled, if database connection fails during initialization, the system
# will automatically fall back to file-based storage and continue operating.
# STORAGE_FALLBACK_ENABLED=true

# Interval between reconnection attempts in milliseconds (default: 60000 = 1 minute)
# Controls how often the system attempts to reconnect to the database after falling
# back to file storage. Lower values = faster recovery but more frequent attempts.
# STORAGE_FALLBACK_RETRY_INTERVAL_MS=60000

# Maximum number of reconnection attempts (default: 0 = unlimited retries)
# Set to a positive number to limit reconnection attempts. Once reached, the system
# will stop trying to reconnect and continue using file storage indefinitely.
# STORAGE_FALLBACK_MAX_RETRIES=0

# Enable detailed logging of fallback events (default: true)
# When enabled, logs all fallback events including reconnection attempts and
# successful switches back to database storage.
# STORAGE_FALLBACK_VERBOSE_LOGGING=true

# Scheduled Backup Configuration
# Enable automatic scheduled backups (default: false)
# BACKUP_ENABLED=true

# Backup schedule using cron expression (default: "0 2 * * *" - daily at 2 AM)
# Format: minute hour day month weekday
# Examples:
#   "0 2 * * *" - Daily at 2:00 AM
#   "0 */6 * * *" - Every 6 hours
#   "0 0 * * 0" - Weekly on Sunday at midnight
#   "0 0 1 * *" - Monthly on the 1st at midnight
# BACKUP_SCHEDULE=0 2 * * *

# Backup output directory (default: ./data/backups)
# BACKUP_OUTPUT_DIR=./data/backups

# Compress backups using gzip (default: true)
# BACKUP_COMPRESS=true

# Number of backups to retain (default: 10, set to 0 to keep all)
# BACKUP_RETAIN=10
