# Core Application Settings
ZAI_API_KEY=your_zai_api_key_here
DEFAULT_MODEL=glm-4.7
PORT=3000

# Admin API Configuration
# Master API key for admin operations (generate a secure random string)
ADMIN_API_KEY=your_admin_api_key_here

# Admin Token Configuration
# Expiration time for admin JWT tokens in seconds (default: 86400 = 24 hours)
ADMIN_TOKEN_EXPIRATION_SECONDS=86400

# Database Configuration
# Path to SQLite database file for API key management
DATABASE_PATH=./data/glm-proxy.db

# Security Settings
# Enable/disable admin API endpoints
ADMIN_API_ENABLED=true

# Rate Limiting Configuration (optional)
# Default rate limit for API keys (requests per minute)
DEFAULT_RATE_LIMIT=60

# CORS Configuration
# Allowed origins for API access (comma-separated)
CORS_ORIGINS=*
