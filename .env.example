ZAI_API_KEY=your_zai_api_key_here
DEFAULT_MODEL=glm-4.7
PORT=3000

# Database Configuration (choose one)
# PostgreSQL: Set DATABASE_URL for production deployments
# DATABASE_URL=postgres://user:password@localhost:5432/glm_proxy

# SQLite: Set DATABASE_PATH for development/simple deployments (default: ./data/sqlite.db)
# DATABASE_PATH=./data/sqlite.db

# Scheduled Backup Configuration
# Enable automatic scheduled backups (default: false)
# BACKUP_ENABLED=true

# Backup schedule using cron expression (default: "0 2 * * *" - daily at 2 AM)
# Format: minute hour day month weekday
# Examples:
#   "0 2 * * *" - Daily at 2:00 AM
#   "0 */6 * * *" - Every 6 hours
#   "0 0 * * 0" - Weekly on Sunday at midnight
#   "0 0 1 * *" - Monthly on the 1st at midnight
# BACKUP_SCHEDULE=0 2 * * *

# Backup output directory (default: ./data/backups)
# BACKUP_OUTPUT_DIR=./data/backups

# Compress backups using gzip (default: true)
# BACKUP_COMPRESS=true

# Number of backups to retain (default: 10, set to 0 to keep all)
# BACKUP_RETAIN=10
